@using DataModelLibrary
@{
    ViewBag.Title = "UploadStudent";
}

@Scripts.Render("~/bundles/ExcelUploadStudent")

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Student List</h3>
    </div>
    <div class="panel-body">
        <div id="grid" class="jqGrid">
            @using (Html.BeginForm("", "", null, FormMethod.Post, 
                new { Id = "bulkuploadstudentform", name = "bulkuploadstudentform", enctype = "multipart/form-data", @class = "form form-inline" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form‐group">
                    <input type="file" id="dataFile" name="upload" class="form-control" />
                    <input type="button" value="Upload" data-toggle="modal" data-target="#StudentModal" class="btn btn-success" />
                </div>
            }
            </div>
        @if (ViewBag.Class != null) {
            var classlist = (List<SubscriberStandards>)ViewBag.Class;
            foreach (var ss in classlist)
            {
                <div>
                    <span class="text-success">Class Added : @ss.Standard.Name</span>
                </div>
            }
        }
        @if (ViewBag.ClassSection != null)
        {
            var classlist = (List<Tuple<string,string>>)ViewBag.ClassSection;
            foreach (var ss in classlist)
            {
                <div>
                    <span class="text-success">Class @ss.Item1 - Section @ss.Item2</span>
                </div>
            }
        }
        @if (ViewBag.Contacts != null)
        {
            var classlist = (List<ContactViewModel>)ViewBag.Contacts;
            if (classlist.Count > 0)
            {
                    <span class="text-success"> Contact Created</span>
            }
            foreach (var ss in classlist)
            {
                <div>
                    <span class="text-success"> @ss.Name -@ss.RollNo-@ss.Mobile</span>
                </div>
            }
        }
        </div>
    </div>
<div class="modal " id="StudentModal" tabindex="-1" role="dialog" aria-labelledby="StudentModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="StudentModalLabel">Upload Confirm</h4>
            </div>
            <div class="modal-body ativa-scroll">
                Are you sure want to upload ?
                @*<div id="dialog-div">

                    <div id="grid" class="jqGrid">

                        <table id="list"></table>
                        <div id="pager" style="text-align: center;"> </div>
                    </div>
                </div>*@

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success btn-sm" id="btnstudentconfirm">Confirm</button>
            </div>
        </div>
    </div>
</div>

