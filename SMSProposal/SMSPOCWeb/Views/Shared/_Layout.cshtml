<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Manage Subscriber", "List", "User")</li>
                                <li>@Html.ActionLink("Manage Role", "GetRoleView", "Role")</li>
                                <li>@Html.ActionLink("Manage UserRole", "GetUserRolesView", "ManageUserRoles")</li>
                            }
                            if (User.IsInRole("Subscriber"))
                            {
                                <li>@Html.ActionLink("Manage Contact", "GetContactView", "Contact")</li>
                                <li>@Html.ActionLink("Manage Standard", "Index", "Standard")</li>
                                <li>@Html.ActionLink("Manage Sections", "Index", "Sections")</li>
                                <li>@Html.ActionLink("Send SMS", "Sendsms", "Notify")</li>
                                
                            }
                        }
}

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")

    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Test POC Application</p>
    </footer>
</div>

    @RenderSection("scripts", required: false)
</body>
</html>
