@{
    ViewBag.Title = "SendSMS";
}
<h2>SendSMS</h2>
@Scripts.Render("~/bundles/jqgrid")
@Scripts.Render("~/bundles/Sendsms")
<style type="text/css">
    .clnik {
        margin: 0px 0px 0px 10px;
    }
</style>
<br />
<br />

<div class="row">
    <div class="input-group col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Contact List</h3>
            </div>
            <div class="panel-body">
                <div id="ContactList"></div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-2">
            <div class="input-group">
                <span class="btn btn-primary" id="LoadContact">LoadContacts</span>
            </div>
        </div>
        <div class="col-lg-10">
            <div class="input-group">
                <span>Message Template</span>
                <select id="dropdown"></select>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="row clearfix">

    <div class="input-group col-lg-12">
        <textarea class="form-control text ui-widget-content ui-corner-all" rows="3" style="min-width: 60%" id="txtsms" name="txtsms"></textarea><br/>
        <p>
            <span id="remaining">160 characters remaining</span> <span id="messages">1 message(s)</span>
        </p>
        <span class="btn btn-primary" id="submitMyForm">Send</span>
    </div>
</div>

<div id="dialog-div">
    <table id="list"></table>
    <div id="pager" style="text-align: center;"> </div>
</div>
<div class="alert alert-danger" id="divwarning">
    <strong>Warning!</strong><span id="errormsg"></span>
</div>


