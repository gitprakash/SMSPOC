@{
    ViewBag.Title = "SendSMS";
}
@Scripts.Render("~/bundles/Messageutility")
@Scripts.Render("~/bundles/jqgrid")
@Scripts.Render("~/bundles/Sendsms")
<style type="text/css">
    .clnik {
        margin: 0px 0px 0px 10px;
    }
</style>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Send SMS Form</h3>
    </div>
    <div class="panel-body">
        <div id="smsview"> 
                
                    <span class="label label-info">Opening SMS <span class="badge" id="opensmscnt"></span></span>
                
                    <span class="label label-info">Available SMS <span class="badge" id="smsbalcnt"></span></span>
                
            </div>
            <div class="row clearfix">
                <div class="input-group col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Contact List</h3>
                        </div>
                        <div class="panel-body">
                            <div id="ContactList"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-2">
                        <div class="input-group">
                            <span class="btn btn-primary" id="LoadContact">LoadContacts</span>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#StudentModal" >Open modal for</button>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="input-group">
                            <span>Message Template</span>
                            <select id="dropdown"></select>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row clearfix">

                <div class="input-group col-lg-12">
                    <textarea class="form-control text ui-widget-content ui-corner-all" rows="3" style="min-width: 60%" id="txtsms" name="txtsms"></textarea><br />
                    <p>
                        <span id="remaining">160 characters remaining</span> <span id="messages">1 message(s)</span>
                    </p>
                    <span class="btn btn-primary" id="submitMyForm">Send</span>
                </div>
            </div>

        <div class="modal fade" id="StudentModal" tabindex="-1" role="dialog" aria-labelledby="StudentModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="StudentModalLabel">Select Student</h4>
                    </div>
                    <div class="modal-body">
                        <div id="dialog-div">

                            <div id="grid" class="jqGrid">

                                <table id="list"></table>
                                <div id="pager" style="text-align: center;"> </div>
                            </div>
                        </div>
